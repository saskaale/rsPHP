function bubblesort(&arr)
{
    cnt = count(arr);
    for (i = 0; i < cnt; ++i) {
        val = i;
        for (j = i + 1; j < cnt; ++j) {
            if (arr[j] < arr[val]) {
                val = j;
            }
        }
        swap(arr[i], arr[val]);
    }
}

ar1[0] = 23;
print "bubble";
bubblesort(ar1);
